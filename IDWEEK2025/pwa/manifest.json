  "shortcuts": [
    {
      "name": "High Priority Sessions",
      "short_name": "High Priority",
      "description": "View high priority sessions for MSL teams",
      "url": "/?filter=high-priority",
      "icons": [{ "src": "icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Today's Schedule",
      "short_name": "Schedule",
      "description": "View today's conference schedule",
      "url": "/?view=schedule",
      "icons": [{ "src": "icons/icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "My Bookmarks",
      "short_name": "Bookmarks",
